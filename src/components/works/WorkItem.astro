---
export interface Props {
    id: string
    image: string
    name: string
    description: string
    url: string
}

const {
    id,
    image,
    name,
    description,
    url
} = Astro.props
---

<div class="bg-white dark:bg-gray-700 rounded-lg shadow-lg p-6 hover:shadow-xl transition-shadow duration-300">
    <a href={`/${id}`}
            class="hover:scale-110 inline-block transition-all duration-1000 hover:shadow-2xl">
    <img class="w-full h-48 object-cover rounded-t-lg mb-4" src={image} alt="Project 1">
    </a>
    <h4 class="text-2xl font-semibold text-gray-900 dark:text-white mb-2">{name}</h4>
    <p class="text-gray-600 dark:text-gray-400">{description}</p>
  </div>
  
</div>